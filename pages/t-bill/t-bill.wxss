.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.list-header {
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx;
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.t-bill-item {
  background: #fff;
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border-left: 8rpx solid #007aff;
}

.t-bill-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.12);
}

.t-bill-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.t-bill-row:last-child {
  margin-bottom: 0;
}

.stock-info {
  font-weight: 600;
  font-size: 30rpx;
  color: #333;
}

.t-bill-type {
  display: inline-block;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-right: 15rpx;
}

.buy-sell {
  background-color: rgba(52, 199, 89, 0.15);
  color: #34c759;
}

.sell-buy {
  background-color: rgba(255, 149, 0, 0.15);
  color: #ff9500;
}

.t-bill-details {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx dashed #eee;
}

.detail-item {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: 22rpx;
  color: #888;
  margin-right: 10rpx;
}

.detail-value {
  font-size: 26rpx;
  font-weight: 500;
}

.profit-positive {
  color: #34c759;
}

.profit-negative {
  color: #ff3b30;
}

.quantity-container {
  text-align: right;
}

.quantity {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.t-bill-info-row {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.status-badge {
  font-size: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  font-weight: 500;
}

.completed {
  background-color: rgba(52, 199, 89, 0.15);
  color: #34c759;
}

.in-progress {
  background-color: rgba(0, 122, 255, 0.15);
  color: #007aff;
}

.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007aff, #0056b3);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0,122,255,0.4);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  z-index: 99;
  opacity: 0.8;
}

.add-button:active,
.add-button:hover {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0,122,255,0.3);
  opacity: 1;
}

.add-button::after {
  content: "+";
  font-size: 60rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
  text-align: center;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #888;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
}