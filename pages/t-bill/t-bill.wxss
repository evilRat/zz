.container {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

.filter-bar {
  display: flex;
  margin-bottom: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 8rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-radius: 6rpx;
  color: #666;
}

.filter-item.active {
  background: #007aff;
  color: #fff;
}

.bill-list {
  width: 100%;
}

.bill-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.stock-info {
  display: flex;
  flex-direction: column;
}

.stock-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stock-code {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.t-type {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.t-type.buySell {
  background: #e6f4ff;
  color: #096dd9;
}

.t-type.sellBuy {
  background: #fff7e6;
  color: #fa8c16;
}

.bill-content {
  margin-bottom: 16rpx;
}

.trade-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.trade-section {
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: #fafafa;
  border-radius: 8rpx;
}

.trade-section:last-child {
  margin-bottom: 0;
}

.trade-section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.trade-details {
  display: flex;
  flex-wrap: wrap;
}

.trade-detail-item {
  display: flex;
  align-items: center;
  width: 50%;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #f8f8f8;
  border-radius: 6rpx;
}

.date {
  font-size: 24rpx;
  color: #666;
}

.quantity-info {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.profit-info {
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.profit-main {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.profit-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.profit-value {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 8rpx;
}

.profit-rate {
  font-size: 28rpx;
}

.profit-details {
  margin-top: 8rpx;
}

.profit-calculation {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

.profit {
  color: #ff4d4f;
}

.loss {
  color: #52c41a;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 122, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.4);
}

.add-button image {
  width: 60rpx;
  height: 60rpx;
}