/* 交易选择器演示页面样式 */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.demo-section {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

/* T账单类型选择 */
.type-picker {
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  background-color: #f8f8f8;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 交易选择区域 */
.trade-selection {
  margin-bottom: 40rpx;
}

.selection-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.selection-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.select-btn {
  padding: 15rpx 30rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.select-btn.disabled {
  background-color: #ccc;
  color: #999;
}

/* 已选择的交易记录 */
.selected-trade {
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  margin-bottom: 20rpx;
}

.trade-info {
  width: 100%;
}

.trade-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  flex-wrap: wrap;
  gap: 15rpx;
}

.stock-code {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stock-name {
  font-size: 26rpx;
  color: #666;
}

.trade-type {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.trade-type.buy {
  background-color: #ffe6e6;
  color: #ff4757;
}

.trade-type.sell {
  background-color: #e6ffe6;
  color: #2ed573;
}

.trade-details {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 10rpx;
}

.detail {
  font-size: 24rpx;
  color: #666;
}

/* 未选择状态 */
.no-selection {
  padding: 40rpx;
  text-align: center;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  background-color: #fafafa;
}

.no-selection-text {
  font-size: 26rpx;
  color: #999;
}

/* 多个交易记录 */
.multiple-trades {
  max-height: 600rpx;
  overflow-y: auto;
}

/* 清空按钮 */
.clear-btn {
  width: 100%;
  padding: 25rpx;
  background-color: #ff4757;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .trade-details {
    grid-template-columns: 1fr;
  }
  
  .selection-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 15rpx;
  }
  
  .select-btn {
    align-self: stretch;
    text-align: center;
  }
}