.stock-selector {
  white-space: nowrap;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #f8f8f8;
}

.stock-item {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
}

.stock-item.active {
  background-color: #007aff;
  color: white;
  border-color: #007aff;
}

.trade-list {
  flex: 1;
}

.add-button {
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
}

.add-button image {
  width: 50rpx;
  height: 50rpx;
}