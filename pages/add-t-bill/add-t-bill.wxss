.container {
  padding: 30rpx;
  padding-bottom: 100rpx;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

/* T账单类型选择 */
.type-selector {
  display: flex;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  padding: 6rpx;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
  color: #666;
}

.type-item.active {
  background: #007aff;
  color: #fff;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-picker {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

/* 交易记录选择器 */
.trade-selector {
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  background: #fafafa;
}

.selector-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.selector-arrow {
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #ccc;
}

/* 交易记录卡片 */
.trade-card {
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 20rpx;
  background: #fff;
}

.trade-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.stock-info {
  display: flex;
  flex-direction: column;
}

.stock-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.stock-code {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.trade-type {
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.trade-type.buy {
  background: #fff2f0;
  color: #ff4d4f;
}

.trade-type.sell {
  background: #f6ffed;
  color: #52c41a;
}

.trade-details {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  width: 50%;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.trade-actions {
  display: flex;
  justify-content: flex-end;
}

.reselect-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  font-size: 24rpx;
}

/* 盈亏信息 */
.profit-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.profit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.profit-item:last-child {
  margin-bottom: 0;
}

.profit-label {
  font-size: 28rpx;
  color: #666;
}

.profit-value {
  font-size: 32rpx;
  font-weight: 600;
}

.profit {
  color: #ff4d4f;
}

.loss {
  color: #52c41a;
}

/* 操作按钮 */
.button-container {
  padding: 20rpx 0;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
}

.submit-button[disabled] {
  background: #f5f5f5;
  color: #ccc;
}