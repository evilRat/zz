.container {
  padding: 30rpx;
}

.type-selector {
  display: flex;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  padding: 6rpx;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
  color: #666;
}

.type-item.active {
  background: #007aff;
  color: #fff;
}

.form-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fff;
}

.form-picker {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.profit-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.profit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.profit-item:last-child {
  margin-bottom: 0;
}

.profit-label {
  font-size: 28rpx;
  color: #666;
}

.profit-value {
  font-size: 32rpx;
  font-weight: 600;
}

.profit {
  color: #ff4d4f;
}

.loss {
  color: #52c41a;
}

.button-container {
  padding: 20rpx 0;
}

.submit-button {
  margin-bottom: 20rpx;
}

.next-button {
  margin-top: 20rpx;
}