<view class="container">
  <view class="page-header">
    <view class="page-title">添加交易记录</view>
    <view class="page-subtitle">记录您的股票/基金买卖信息</view>
  </view>
  
  <form class="trade-form" bindsubmit="submitTrade">
    <view class="form-card">
      <view class="card-title">基本信息</view>
      
      <view class="form-item">
        <text class="form-label">股票/基金代码</text>
        <input class="form-input" type="text" placeholder="请输入股票或基金代码" value="{{stockCode}}" bindinput="onStockCodeInput" />
      </view>
      
      <view class="form-item">
        <text class="form-label">股票/基金名称</text>
        <input class="form-input" type="text" placeholder="请输入股票或基金名称" value="{{stockName}}" bindinput="onStockNameInput" />
      </view>
    </view>
    
    <view class="form-card">
      <view class="card-title">交易详情</view>
      
      <view class="form-item">
        <text class="form-label">交易类型</text>
        <view class="type-selector">
          <view class="type-option {{tradeType === 'buy' ? 'active buy' : ''}}" data-value="buy" bindtap="onTypeChange">买入</view>
          <view class="type-option {{tradeType === 'sell' ? 'active sell' : ''}}" data-value="sell" bindtap="onTypeChange">卖出</view>
        </view>
      </view>
      
      <view class="form-item">
        <text class="form-label">交易价格 (¥)</text>
        <input class="form-input" type="digit" placeholder="请输入交易价格" value="{{price}}" bindinput="onPriceInput" />
      </view>
      
      <view class="form-item">
        <text class="form-label">交易数量</text>
        <input class="form-input" type="number" placeholder="请输入交易数量" value="{{quantity}}" bindinput="onQuantityInput" />
      </view>
      
      <view class="form-item">
        <text class="form-label">交易时间</text>
        <picker mode="date" value="{{date}}" bindchange="onDateChange">
          <view class="picker-container">
            {{date ? date : '请选择交易时间'}}
          </view>
        </picker>
      </view>
    </view>
    
    <view class="form-card">
      <view class="card-title">交易金额</view>
      <view class="amount-display">
        <view class="amount-label">总计金额</view>
        <text>¥ {{amount}}</text>
      </view>
    </view>
    
    <button class="submit-btn" form-type="submit">保存记录</button>
  </form>
</view>