/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.trade-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.trade-header {
  font-weight: bold;
  background-color: #f5f5f5;
}

.trade-positive {
  color: #e33;
}

.trade-negative {
  color: #393;
}

.btn-primary {
  background-color: #007aff;
  color: white;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  margin: 10rpx;
}

.btn-danger {
  background-color: #ff3b30;
  color: white;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  margin: 10rpx;
}