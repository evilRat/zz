/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  box-sizing: border-box;
}

/* Global button styles */
.btn-primary {
  background: linear-gradient(135deg, #007aff, #0056b3);
  color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(0,122,255,0.3);
  border: none;
  margin: 10rpx;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0,122,255,0.2);
}

.btn-danger {
  background: linear-gradient(135deg, #ff3b30, #d93025);
  color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(255, 59, 48, 0.3);
  border: none;
  margin: 10rpx;
}

.btn-danger:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(255, 59, 48, 0.2);
}

/* Global text styles */
.trade-buy {
  color: #34c759;
}

.trade-sell {
  color: #ff3b30;
}

.trade-positive {
  color: #34c759;
}

.trade-negative {
  color: #ff3b30;
}

/* Utility classes */
.text-center {
  text-align: center;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.pt-20 {
  padding-top: 20rpx;
}

.pb-20 {
  padding-bottom: 20rpx;
}